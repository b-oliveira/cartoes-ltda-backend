{
  "swagger": "2.0",
  "info": {
    "title": "Cartões Ltda Backend",
    "version": "1.0"
  },
  "host": "localhost:3333",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "security": [
    {
      "Bearer": []
    }
  ],
  "tags": [
    {
      "name": "Sessions"
    },
    {
      "name": "Cards"
    },
    {
      "name": "Modalities"
    },
    {
      "name": "Transactions"
    },
    {
      "name": "Balances"
    }
  ],
  "paths": {
    "/sessions": {
      "post": {
        "tags": [
          "Sessions"
        ],
        "security": [],
        "parameters": [
          {
            "name": "session",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              },
              "example": {
                "name": "portal",
                "password": "123456"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "username": {
                      "type": "string"
                    }
                  }
                },
                "token": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "examples": {
              "application/json": {
                "error": "Requisição inválida!"
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "examples": {
              "application/json": {
                "error": "Credenciais inválidas!"
              }
            }
          }
        }
      }
    },
    "/cards": {
      "get": {
        "tags": [
          "Cards"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "properties": {
                  "id": {
                    "type": "integer"
                  },
                  "name": {
                    "type": "string"
                  },
                  "modalities": {
                    "type": "array",
                    "items": {
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "name": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "examples": {
              "application/json": {
                "error": "Credenciais inválidas!"
              }
            }
          }
        }
      }
    },
    "/modalities": {
      "get": {
        "tags": [
          "Modalities"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "properties": {
                  "id": {
                    "type": "integer"
                  },
                  "name": {
                    "type": "string"
                  },
                  "rate_percentage": {
                    "type": "number"
                  },
                  "days_term": {
                    "type": "integer"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "examples": {
              "application/json": {
                "error": "Credenciais inválidas!"
              }
            }
          }
        }
      }
    },
    "/transactions": {
      "get": {
        "tags": [
          "Transactions"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "properties": {
                  "sequential": {
                    "type": "string"
                  },
                  "value": {
                    "type": "number"
                  },
                  "net_value": {
                    "type": "number"
                  },
                  "date": {
                    "type": "string"
                  },
                  "available_date": {
                    "type": "string"
                  },
                  "card": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "number"
                      },
                      "name": {
                        "type": "string"
                      }
                    }
                  },
                  "modality": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "number"
                      },
                      "name": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "examples": {
              "application/json": {
                "error": "Credenciais inválidas!"
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Transactions"
        ],
        "parameters": [
          {
            "name": "transaction",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "card_id": {
                  "type": "integer"
                },
                "modality_id": {
                  "type": "integer"
                },
                "sequential": {
                  "type": "string"
                },
                "value": {
                  "type": "number"
                },
                "date": {
                  "type": "string"
                }
              },
              "example": {
                "card_id": 1,
                "modality_id": 1,
                "sequential": "0000000001",
                "value": 100,
                "date": "2020-03-10T05:00:00-03:00"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "sequential": {
                  "type": "string"
                },
                "value": {
                  "type": "number"
                },
                "net_value": {
                  "type": "number"
                },
                "date": {
                  "type": "string"
                },
                "available_date": {
                  "type": "string"
                },
                "card": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "name": {
                      "type": "string"
                    }
                  }
                },
                "modality": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "name": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "examples": {
              "application/json": {
                "error": "Requisição inválida!"
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "examples": {
              "application/json": {
                "error": "Credenciais inválidas!"
              }
            }
          }
        }
      }
    },
    "/balances": {
      "get": {
        "tags": [
          "Balances"
        ],
        "parameters": [
          {
            "name": "date",
            "in": "query",
            "required": false,
            "x-example": "2020-03-10T23:59:59-03:00",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "available": {
                  "type": "object",
                  "properties": {
                    "value": {
                      "type": "number"
                    },
                    "net_value": {
                      "type": "number"
                    }
                  }
                },
                "outstanding": {
                  "type": "object",
                  "properties": {
                    "value": {
                      "type": "number"
                    },
                    "net_value": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "examples": {
              "application/json": {
                "error": "Credenciais inválidas!"
              }
            }
          }
        }
      }
    }
  }
}
